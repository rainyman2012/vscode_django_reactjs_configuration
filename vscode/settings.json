{
    "python.pythonPath": "venv/bin/python",
    "emmet.triggerExpansionOnTab": true, // Emmet extension must have been installed on your system.
    "python.linting.pycodestyleEnabled": true,
    "python.linting.pylintPath": "pylint",
    //https://github.com/microsoft/vscode/issues/38133#issuecomment-344676336
    "editor.fontFamily": "'Ubuntu Mono', 'monospace'" // if you are using ubuntu as development environment
    "python.linting.pylintArgs": [
        "--load-plugins",
        "pylint_django"
    ],
    "python.linting.pylintEnabled": false, // If you want vscode show you  python linter errors change this to true.
    "python.venvPath": "${workspaceFolder}/env/bin/python3",
    "python.linting.pycodestyleArgs": [
        "--ignore=E501"
    ],
    "files.exclude": {
        "**/*.pyc": true,
        "**/.git": false,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true
    },
    "files.associations": {
        "*.js": "javascriptreact"
    },
    "git.ignoreLimitWarning": true,
    "sqltools.connections": [
        {
            "askForPassword": true,
            "database": "./db.sqlite3",
            "dialect": "SQLite",
            "name": "assignment"
        }
    ],
    "debug.allowBreakpointsEverywhere": true,
    "window.title": "${folderPath}${separator}${activeEditorShort}${rootPath}",
    "window.titleBarStyle": "custom",
    "python.linting.enabled": true,
    "files.autoSave": "off",
    "editor.formatOnSave": false, // Use "ctrl + shift + i" for formating current file.
}
